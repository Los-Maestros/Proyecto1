  | < DROP > "(" ( tValue = < NUM > | tValue = < NAME > ) ")" {
    if (esFuncion.isEmpty()) { 
    salida = "\nDROP v: " + tValue.image;
    code.add(new Instrucciones("drop", tValue.image)); }
    else { Funciones.get(esFuncion).add(new Instrucciones("drop", tValue.image)); }
