    if (esFuncion.isEmpty()) { 
    salida = "\nTURNTO d: " + tDir.image;
	code.add(new Instrucciones("turnto", "0", tDir.image)); }
	else {Funciones.get(esFuncion).add(new Instrucciones("turnto", "0", tDir.image)); }
